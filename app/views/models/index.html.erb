<p id="notice"><%= notice %></p>

<h1>Listing Models</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Manufactured from</th>
      <th>Manufactured until</th>
      <th>Engine size</th>
      <th>Doors</th>
      <th>Trim</th>
      <th>Body</th>
      <th>Fuel</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @models.each do |model| %>
      <tr>
        <td><%= model.name %></td>
        <td><%= model.manufactured_from %></td>
        <td><%= model.manufactured_until %></td>
        <td><%= model.engine_size %></td>
        <td><%= model.doors %></td>
        <td><%= model.trim %></td>
        <td><%= model.body %></td>
        <td><%= model.fuel %></td>
        <td><%= link_to 'Show', model %></td>
        <td><%= link_to 'Edit', edit_model_path(model) %></td>
        <td><%= link_to 'Destroy', model, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

